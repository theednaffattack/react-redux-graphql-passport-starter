{
  "name": "react-redux-graphql-hot-demo",
  "version": "1.0.0",
  "description": "demo for react-redux with graphql and hot",
  "main": "src",
  "scripts": {
    "start": "concurrently --kill-others \"nodemon api/index.js --watch api --exec babel-node\" \"nodemon --watch src src\" \"node webpack/webpack-dev-server.js\"",
    "prebuild": "rimraf dist",
    "build": "./node_modules/.bin/cross-env NODE_ENV=production webpack -p --optimize-dedupe --config webpack/webpack.config.js",
    "eslint": "eslint ."
  },
  "keywords": [
    "react",
    "redux",
    "graphql",
    "hot",
    "babel",
    "webpack"
  ],
  "author": "Tian, Scott",
  "license": "ISC",
  "dependencies": {
    "apollo-client": "^0.7.0",
    "axios": "^0.15.3",
    "babel-cli": "^6.18.0",
    "babel-polyfill": "^6.20.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "concurrently": "^3.1.0",
    "connect-history-api-fallback": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cross-env": "^3.1.4",
    "csurf": "^1.9.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "graphql": "^0.8.2",
    "graphql-server-express": "^0.4.3",
    "graphql-subscriptions": "^0.2.2",
    "graphql-tag": "^1.1.2",
    "graphql-tools": "^0.8.3",
    "http-proxy-middleware": "^0.17.2",
    "immutability-helper": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jwt-decode": "^2.1.0",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.2",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "react": "^15.4.1",
    "react-apollo": "^0.8.1",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.1",
    "react-helmet": "^4.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^1.0.0",
    "redux-form": "^6.2.1",
    "serialize-javascript": "^1.3.0",
    "subscriptions-transport-ws": "^0.3.1",
    "webpack-dev-server": "^1.16.2",
    "webpack-isomorphic-tools": "^2.6.6",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.13.0",
    "postcss-loader": "^1.2.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "stripcomment-loader": "^0.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ],
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/react-in-jsx-scope": 2
    },
    "plugins": [
      "react"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
